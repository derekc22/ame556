<mujoco model="cartpole">
	<compiler angle="radian"/>
	<option gravity="0 0 -9.81" integrator="RK4" timestep="0.00001"/>

		<asset>
			<texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072" />
			<texture type="2d" name="floor" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3" markrgb="0.8 0.8 0.8" width="300" height="300" />
			<material name="floor" texture="floor" texuniform="true" texrepeat="5 5" reflectance="0.5" />
		</asset>

		<visual>
			<headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0" />
		</visual>

		<worldbody>

			<light name="spotlight0" mode="targetbodycom" target="cart" pos="0 0 10" cutoff="60" />
			<light name="spotlight1" mode="targetbodycom" target="cart" pos="0.5 0 10" cutoff="60" />
	        <!-- <geom name="floor" type="plane" material="floor" size="10 10 0.1" pos="0 0 0" conaffinity="1" condim="4"/> -->
			
            <!-- cart body -->
			<body name="cart" pos="0 0 0">
				<!-- slider joint along x -->
				<joint name="slider" type="slide" axis="1 0 0"/>
				<!-- cart geometry, mass = 1 kg -->
				<geom name="cart" type="box" size="0.10 0.10 0.05" mass="1.0" rgba="0 0 1 1"/>
				<!-- pole hinge pivot, placed on top of the cart -->
                <body name="pole_base" pos="0 0 0">
					<!-- hinge in the xâ€“z plane, rotate about -y -->
					<joint name="hinge" type="hinge" axis="0 -1 0"/>
					<!-- massless visual pole: capsule of length L = 0.3 m -->
					<geom name="pole_visual"
						type="capsule"
						fromto="0 0 0   0 0 0.3"
						size="0.01"
						density="0"
						contype="0" conaffinity="0"
						rgba="0 1 0 1"/>
					<!-- tip mass: sphere of mass 0.2 kg located at the end of the pole -->
					<body name="tip" pos="0 0 0.3">
                        <geom name="ball" type="sphere" size="0.02" mass="0.2" rgba="1 0 0 1"/>
			        </body>
			    </body>
			</body>
		</worldbody>

        <actuator>
            <motor name="slider" joint="slider"/>
        </actuator>

		<keyframe>
			<key name="up" 
				qpos="0.1 0.1"
				qvel="0 0"
				/>
		</keyframe>
</mujoco>
